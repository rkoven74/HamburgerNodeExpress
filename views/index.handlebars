

 <h1>Hamburgers!</h1>

<h2>Hamburgers to be eaten!</h2>

<ul>
  {{#each hamburgerData}}
    {{#unless devour}}
      <li>
	{{name}}
  <form onsubmit="#" method="POST">
	<button type="submit" class="change-devour" data-id="{{id}}" data-newdevour="{{devour}}">
		Devour It!
	</button>
  </form>

</li>
    {{/unless}}
  {{/each}}
</ul>
<h2>Hamburgers Devoured!</h2>

<ul>
  {{#each hamburgerData}}
    {{#if devour}}
      <li>
	{{name}}
  <form onsubmit="#" method="POST">
	<button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
  </form>
</li>
    {{/if}}
  {{/each}}
</ul>

